<div class="card mb-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="fas fa-fire"></i> Most Popular</h5>
    </div>
    <div class="card-body">
        <div class="row">
            {{#if sidebar.popular}}
            {{#each sidebar.popular}}
            <div class="col-md-4 mt-2">
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" class="w-100 h-100 image-thumbnail">
                </a>
            </div>
            {{/each}}
            {{else}}
            <div class="col-sm-12 text-center">
                <h5>There are no recent images <i class="far fa-image"></i></h5>
            </div>
            {{/if}}
        </div>
    </div>
</div>